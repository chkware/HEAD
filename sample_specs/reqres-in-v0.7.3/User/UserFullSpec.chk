version: default:testcase:0.7.3

variables:
  __import__: [
    Env: ../Env.chk
  ]
  Id: ~
  Resp_Req: ~
  Resp_Spec: ~

request:
  path: "{$Env.server}/user/{$Id}"
  method: GET

spec:
  execute:
    file: self
    result: $Resp_Req

  asserts:
    - {type: AssertEquals, actual: $Resp_Req.code, expected: 200, silent: true}

expose: $Resp_Spec
